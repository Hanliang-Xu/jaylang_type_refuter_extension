{
	"compilerOptions": {
		"target": "ES2024",
		"lib": [
			"ES2024"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"**/*.test.ts",
		"**/*.spec.ts",
		"../node_modules"
	]
}