    match t with
    | {left = lt, right = rt, item = n} ->
        let check_left = 
            match lt with
            | {left = lt2, right = rt2, item = n2} -> n >= n2
            | {leaf = b2} -> true
            end
        in
        if check_left then
            let check_right = 
                match rt with
                | {left = lt2, right = rt2, item = n2} -> n <= n2
                | {leaf = b2} -> true
                end
            in
            if check_right then
                if is_bst lt then is_bst rt else false
            else
                false
        else false
    | {leaf = b} -> true
    end
in
