
# flatten the input down to just a list of ints and bools
# see comment in flatten function for why it's ill-typed

let any_type = Mu tt. ( 'a || List tt ) in

let rec append a b =
  match a with
  | [] -> b
  | hd :: tl -> hd :: append tl b
  end
in

let rec flatten (x : any_type) : List 'a =
  match x with
  | [] -> []
  | hd :: tl -> append (flatten hd) tl # should have flatten tl not tl in the correct call 
  | _ -> [ x ]
  end
  in

flatten
