(* it's expected that the evaluator quits before finishing `g 100000000` *)

let is_100_000_000 x = x == 100000000

let f (x : { int | is_100_000_000}) : bool = 
  let rec g (x : int) : int =
    if x == 0
    then 0
    else g (x - 1)
  in
  g x (* ERROR: returns int here *)
