let rec sum x =
  if x <= 0
  then 0
  else x + sum (x - 1)

let h y =
  let b = y + y <= sum y
  in
  b

let main (n : int) : { b : bool | b } =
  h n (* ERROR: `n` needs to be at least `3` for `h n` to be true *)
