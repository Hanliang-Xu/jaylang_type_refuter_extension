let rec sum (dependent x : int) : { i : int | x < 0 || i == x * (x + 1) / 2 } =
  if x <= 0
  then 0
  else x + sum (x - 1)

let main (n : int | n >= 14) : { i : int | 100 <= i } =
  sum n
