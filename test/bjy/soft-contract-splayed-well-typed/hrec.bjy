let non_neg = { i : int | i >= 0 }

let rec f (g : non_neg -> non_neg) (x : non_neg) : non_neg =
  if x <= 0
  then g x
  else f (fun x -> f g x) (g x)

let main (n : non_neg) : non_neg =
  f (fun x -> x + 1) n
