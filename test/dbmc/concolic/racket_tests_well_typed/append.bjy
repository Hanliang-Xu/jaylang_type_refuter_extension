# ill-typed when a and b are empty

let is_nonempty ls =
  match ls with
  | [] -> false
  | _ -> true
  end
in

let nonempty_list = {. List 'a | is_nonempty } in

let rec append (a : nonempty_list) (b : nonempty_list) : nonempty_list =
  match a with
  | [] -> b
  | hd :: tl -> hd :: append tl b
  end
in

append